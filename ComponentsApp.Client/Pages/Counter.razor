@page "/counter"
@rendermode InteractiveAuto
@inject ILogger<Counter> Logger

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary btn-base" @onclick="IncrementCount">Click me</button>

@code {
    protected override void OnParametersSet()
    {
        Logger.LogInformation("This is from OnParameters Set");
    }
    protected override void OnInitialized()
    {
        Logger.LogInformation("Counter component initialized");
    }
    protected override void OnAfterRender(bool firstRender)
    {
        Logger.LogInformation("Counter component rendered");
    }
    private int currentCount = 0;
    private async Task IncrementCount()
    {
        currentCount++;

        await Task.Delay(1000);

        currentCount++;
    }
}
